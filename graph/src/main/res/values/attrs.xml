<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="spark_SparkViewStyle" format="reference" />

    <declare-styleable name="SparkView">
        <attr name="spark_lineColor" format="color|reference" />
        <attr name="spark_lineWidth" format="dimension|reference" />
        <attr name="spark_cornerRadius" format="dimension|reference" />
        <!-- {@deprecated Use fillType instead.} -->
        <attr name="spark_fill" format="boolean|reference" />
        <attr name="spark_fillColor" format="color|reference" />
        <attr name="spark_fillType" format="enum">
            <!-- must match values in SparkView.FillType -->
            <enum name="none" value="0" />
            <enum name="up" value="1" />
            <enum name="down" value="2" />
            <enum name="towardZero" value="3" />
        </attr>

        <attr name="spark_baseLineColor" format="color|reference" />
        <attr name="spark_baseLineWidth" format="dimension|reference" />

        <attr name="spark_scrubLineColor" format="color|reference" />
        <attr name="spark_scrubLineWidth" format="dimension|reference" />

        <attr name="spark_scrubEnabled" format="boolean|reference" />

        <attr name="spark_animateChanges" format="boolean|reference" />
    </declare-styleable>

    <attr name="PieViewStyle" format="reference" />

    <declare-styleable name="PieView">
        <attr name="pie_lineWidth" format="dimension|reference" />
        <attr name="pie_gap" format="dimension|reference" />
        <attr name="pie_lineBackground" format="color|reference" />
    </declare-styleable>

    <attr name="VerticalProgressBarStyle" format="reference" />

    <declare-styleable name="VerticalProgressBar">
        <attr name="vpb_lineWidth" format="dimension|reference" />
        <attr name="vpb_lineColor" format="color|reference" />
        <attr name="vpb_lineBackground" format="color|reference" />
        <attr name="vpb_orientation" format="enum">
            <enum name="horizontal" value="0"/>
            <enum name="vertical" value="1"/>
        </attr>
    </declare-styleable>

    <attr name="BarViewStyle" format="reference" />

    <declare-styleable name="BarView">
        <attr name="bv_lineWidth" format="dimension|reference" />
        <attr name="bv_lineColor" format="color|reference" />
        <attr name="bv_lineBackground" format="color|reference" />
        <attr name="bv_labelTextSize" format="dimension|reference" />
        <attr name="bv_labelPadding" format="dimension|reference" />
        <attr name="bv_labelTextColor" format="color|reference" />
        <attr name="bv_labelFontFamily" format="reference" />
        <attr name="bv_labelTextStyle" format="enum">
            <enum name="BOLD" value="0"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="LimitLineView">

        <attr name="llv_lineWidth" format="dimension|reference" />
        <attr name="llv_lineColor" format="color|reference" />
        <attr name="llv_baselineWidth" format="dimension|reference" />
        <attr name="llv_baselineColor" format="color|reference" />
        <attr name="llv_lineDashGap" format="dimension|reference" />
        <attr name="llv_intersectionPointRadius" format="dimension|reference" />
        <attr name="llv_intersectionPointColor" format="color|reference" />

        <attr name="llv_valueTextSize" format="dimension|reference" />
        <attr name="llv_valuePadding" format="dimension|reference" />
        <attr name="llv_valueTextColor" format="color|reference" />
        <attr name="llv_valueFontFamily" format="reference" />
        <attr name="llv_valueTextStyle" format="enum">
            <enum name="BOLD" value="0"/>
        </attr>

        <attr name="llv_labelTextSize" format="dimension|reference" />
        <attr name="llv_labelPadding" format="dimension|reference" />
        <attr name="llv_labelTextColor" format="color|reference" />
        <attr name="llv_labelFontFamily" format="reference" />
        <attr name="llv_labelTextStyle" format="enum">
            <enum name="BOLD" value="0"/>
        </attr>

    </declare-styleable>

    <attr name="LimitLineViewStyle" format="reference" />

    <attr name="BudgetLineViewStyle" format="reference" />

    <declare-styleable name="BudgetLineView">

        <attr name="blv_spentLineWidth" format="dimension|reference" />
        <attr name="blv_spentLineColor" format="color|reference" />

        <attr name="blv_baselineWidth" format="dimension|reference" />
        <attr name="blv_baselineColor" format="color|reference" />

        <attr name="blv_budgetLimitLineWidth" format="dimension|reference" />
        <attr name="blv_budgetLimitLineColor" format="color|reference" />

        <attr name="blv_budgetLimitShiftColor" format="color|reference" />

        <attr name="blv_budgetLimitTextSize" format="dimension|reference" />
        <attr name="blv_budgetLimitTextColor" format="color|reference" />
        <attr name="blv_budgetLimitTextFontFamily" format="reference" />
        <attr name="blv_budgetLimitTextStyle" format="enum">
            <enum name="BOLD" value="0"/>
        </attr>
        <attr name="blv_budgetLimitTextPadding" format="dimension|reference" />

        <attr name="blv_budgetProjectionLineWidth" format="dimension|reference" />
        <attr name="blv_budgetProjectionLineColor" format="color|reference" />

        <attr name="blv_dateProjectionLineWidth" format="dimension|reference" />
        <attr name="blv_dateProjectionLineColor" format="color|reference" />

        <attr name="blv_zeroOffset" format="dimension|reference" />

        <attr name="blv_intersectionPointRadius" format="dimension|reference" />
        <attr name="blv_intersectionPointColor" format="color|reference" />

        <attr name="blv_intersectionPointBorderWidth" format="dimension|reference" />
        <attr name="blv_intersectionPointBorderColor" format="color|reference" />

        <attr name="blv_dateTextSize" format="dimension|reference" />
        <attr name="blv_dateTextColor" format="color|reference" />
        <attr name="blv_dateTextFontFamily" format="reference" />
        <attr name="blv_dateTextStyle" format="enum">
            <enum name="BOLD" value="0"/>
        </attr>

        <attr name="blv_dateRectPadding" format="dimension|reference" />
        <attr name="blv_dateRectColor" format="color|reference" />
        <attr name="blv_dateRectRadius" format="dimension|reference" />

        <attr name="blv_puckSize" format="dimension|reference" />
        <attr name="blv_puckGap" format="dimension|reference" />

        <attr name="blv_intersectionPointTextBgColor" format="color|reference" />

        <attr name="blv_touchedPointAmountTextSize" format="dimension|reference" />
        <attr name="blv_touchedPointAmountTextColor" format="color|reference" />
        <attr name="blv_touchedPointAmountTextFontFamily" format="reference" />
        <attr name="blv_touchedPointAmountTextStyle" format="enum">
            <enum name="BOLD" value="0"/>
        </attr>

        <attr name="blv_touchedPointAmountTextPadding" format="dimension|reference" />

    </declare-styleable>

</resources>
