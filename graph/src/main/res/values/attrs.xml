<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="spark_SparkViewStyle" format="reference" />

    <declare-styleable name="SparkView">
        <attr name="spark_lineColor" format="color|reference" />
        <attr name="spark_lineWidth" format="dimension|reference" />
        <attr name="spark_cornerRadius" format="dimension|reference" />
        <!-- {@deprecated Use fillType instead.} -->
        <attr name="spark_fill" format="boolean|reference" />
        <attr name="spark_fillColor" format="color|reference" />
        <attr name="spark_fillType" format="enum">
            <!-- must match values in SparkView.FillType -->
            <enum name="none" value="0" />
            <enum name="up" value="1" />
            <enum name="down" value="2" />
            <enum name="towardZero" value="3" />
        </attr>

        <attr name="spark_baseLineColor" format="color|reference" />
        <attr name="spark_baseLineWidth" format="dimension|reference" />

        <attr name="spark_scrubLineColor" format="color|reference" />
        <attr name="spark_scrubLineWidth" format="dimension|reference" />

        <attr name="spark_scrubEnabled" format="boolean|reference" />

        <attr name="spark_animateChanges" format="boolean|reference" />
    </declare-styleable>

    <attr name="spark_PieViewStyle" format="reference" />

    <declare-styleable name="PieView">
        <attr name="pie_lineWidth" format="dimension|reference" />
        <attr name="pie_gap" format="dimension|reference" />
        <attr name="pie_lineBackground" format="color|reference" />
    </declare-styleable>

    <attr name="VerticalProgressBarStyle" format="reference" />

    <declare-styleable name="VerticalProgressBar">
        <attr name="vpb_lineWidth" format="dimension|reference" />
        <attr name="vpb_lineColor" format="color|reference" />
        <attr name="vpb_lineBackground" format="color|reference" />
        <attr name="vpb_orientation" format="enum">
            <enum name="horizontal" value="0"/>
            <enum name="vertical" value="1"/>
        </attr>
    </declare-styleable>

    <attr name="BarViewStyle" format="reference" />

    <declare-styleable name="BarView">
        <attr name="bv_lineWidth" format="dimension|reference" />
        <attr name="bv_lineColor" format="color|reference" />
        <attr name="bv_lineBackground" format="color|reference" />
        <attr name="bv_labelTextSize" format="dimension|reference" />
        <attr name="bv_labelPadding" format="dimension|reference" />
        <attr name="bv_labelTextColor" format="color|reference" />
        <attr name="bv_labelFontFamily" format="reference" />
        <attr name="bv_labelTextStyle" format="enum">
            <enum name="BOLD" value="0"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="LimitLineView">
    </declare-styleable>

    <attr name="LimitLineViewStyle" format="reference" />
</resources>
