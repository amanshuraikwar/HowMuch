<animated-vector
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt">
    <aapt:attr name="android:drawable">
        <vector
            android:name="down_stats"
            android:width="24dp"
            android:height="24dp"
            android:viewportWidth="24"
            android:viewportHeight="24">
            <clip-path
                android:name="mask"
                android:pathData="M 0 0 L 24 0 L 24 24 L 0 24 L 0 0 Z M 0 0 L 4 0 L 4 24 L 0 24 L 0 0 Z"/>
            <path
                android:name="arrow_path"
                android:pathData="M 16 18 L 18.29 15.71 L 13.41 10.83 L 9.41 14.83 L 2 7.41 L 3.41 6 L 9.41 12 L 13.41 8 L 19.71 14.29 L 22 12 L 22 18 Z"
                android:fillColor="#ffffffff"
                android:strokeWidth="1"/>
        </vector>
    </aapt:attr>
    <target android:name="mask">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:propertyName="pathData"
                android:duration="1800"
                android:valueFrom="M 0 0 L 24 0 L 24 24 L 0 24 L 0 0 Z M 24 0 L 0 0 L 0 24 L 24 24 Z"
                android:valueTo="M 0 0 L 24 0 L 24 24 L 0 24 L 0 0 Z M 24 0 L 24 0 L 24 24 L 24 24 Z"
                android:valueType="pathType"
                android:interpolator="@android:interpolator/fast_out_slow_in"/>
        </aapt:attr>
    </target>
    <target android:name="arrow_path">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:propertyName="fillAlpha"
                android:startOffset="3500"
                android:duration="500"
                android:valueFrom="1"
                android:valueTo="0"
                android:valueType="floatType"
                android:interpolator="@android:interpolator/fast_out_slow_in"/>
        </aapt:attr>
    </target>
</animated-vector>
