    <style
        name="Widget.HowMuch.InputTextView"
        parent="@style/Widget.AppCompat.TextView">
        <item name="android:paddingStart">@dimen/input_field_offset</item>
        <item name="android:paddingEnd">@dimen/padding_normal</item>
