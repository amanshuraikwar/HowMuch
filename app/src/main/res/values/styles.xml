<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="HowMuch" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowSharedElementsUseOverlay">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
    </style>

    <style name="HowMuch.Translucent">

        <item name="android:windowBackground">@color/scrim</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="HowMuch.Home">

        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="HowMuch.Translucent.ExpenseDay">

        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/grey3</item>
    </style>

    <style name="HowMuch.Translucent.Settings">

        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/grey3</item>
    </style>

    <style name="HowMuch.Translucent.Intro">

    </style>

    <style name="HowMuch.Translucent.AddTransaction">
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/grey3</item>
    </style>

    <style
        name="Widget.HowMuch.BorderlessImageButton"
        parent="@android:style/Widget.Material.ImageButton">

        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
        <item name="android:tint">@color/activeIcon</item>
    </style>

    <!-- text appearance-->
    <style
        name="TextAppearance.Display4"
        parent="@android:style/TextAppearance.Material.Display4">

    </style>

    <style
        name="TextAppearance.Display3"
        parent="@android:style/TextAppearance.Material.Display3">

    </style>

    <style
        name="TextAppearance.Display2"
        parent="@android:style/TextAppearance.Material.Display2">

    </style>

    <style
        name="TextAppearance.Display1"
        parent="@android:style/TextAppearance.Material.Display1">

    </style>

    <style
        name="TextAppearance.Headline"
        parent="@android:style/TextAppearance.Material.Headline">

    </style>

    <style
        name="TextAppearance.Title"
        parent="@android:style/TextAppearance.Material.Title">

    </style>

    <style
        name="TextAppearance.Subhead"
        parent="@android:style/TextAppearance.Material.Subhead">

    </style>

    <style
        name="TextAppearance.Body1"
        parent="@android:style/TextAppearance.Material.Body1">

    </style>

    <style
        name="TextAppearance.Body2"
        parent="@android:style/TextAppearance.Material.Body2">

    </style>

    <style
        name="TextAppearance.Caption"
        parent="@android:style/TextAppearance.Material.Caption">

    </style>

    <style
        name="TextAppearance.ExpenseHeading"
        parent="@style/TextAppearance.Body2">

        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style
        name="TextAppearance.ExpenseAmountBig"
        parent="@style/TextAppearance.Display4">

        <item name="android:fontFamily">sans-serif-condensed-light</item>
        <item name="android:textColor">@color/primaryText</item>
    </style>

    <style
        name="TextAppearance.CurrencySymbolBig"
        parent="@style/TextAppearance.Display3">

        <item name="android:fontFamily">sans-serif-condensed-light</item>
        <item name="android:textColor">@color/secondaryText</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style
        name="TextAppearance.CurrencySymbol"
        parent="@style/TextAppearance.Display1">

        <item name="android:fontFamily">sans-serif-condensed-light</item>
        <item name="android:textColor">@color/secondaryText</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style
        name="TextAppearance.ListHeading"
        parent="@style/TextAppearance.Subhead">

        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:textColor">@color/disableHintText</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style
        name="TextAppearance.Btn"
        parent="@style/TextAppearance.Title">

        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/primaryTextLight</item>
    </style>

    <style
        name="TextAppearance.ExpenseDate"
        parent="@style/TextAppearance.Subhead">

        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/primaryText</item>
    </style>

    <style
        name="TextAppearance.TransactionNum"
        parent="@style/TextAppearance.Subhead">

        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/secondaryText</item>
    </style>

    <style
        name="TextAppearance.ExpenseAmountSmall"
        parent="@style/TextAppearance.Display1">

        <item name="android:fontFamily">sans-serif-condensed-medium</item>
        <item name="android:textColor">@color/primaryText</item>
    </style>

    <style
        name="TextAppearance.ExpenseTextSmall"
        parent="@style/TextAppearance.Body1">

        <item name="android:textColor">@color/primaryText</item>
    </style>

    <style
        name="TextAppearance.ExpenseTime"
        parent="@style/TextAppearance.Subhead">

        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/primaryText</item>
    </style>

    <style
        name="TextAppearance.ExpenseAmount"
        parent="@style/TextAppearance.Display3">

        <item name="android:fontFamily">sans-serif-condensed-light</item>
        <item name="android:textColor">@color/primaryText</item>
    </style>

    <style
        name="TextAppearance.ToolbarTitle"
        parent="@style/TextAppearance.Title">

        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:letterSpacing">0.05</item>
    </style>

    <style
        name="TextAppearance.ToolbarTitle.SmallCaps">

        <item name="android:fontFeatureSettings">smcp</item>
    </style>

    <style
        name="TextAppearance.ToolbarTitle.Light">

        <item name="android:textColor">@color/primaryTextLight</item>
    </style>

    <style
        name="TextAppearance.ToolbarTitle.Light.SmallCaps">

        <item name="android:fontFeatureSettings">smcp</item>
    </style>

    <!-- to be deprecated-->
    <style
        name="TextAppearance.IntroLine"
        parent="@style/TextAppearance.Headline">

        <item name="android:textColor">@color/secondaryText</item>
    </style>

    <style
        name="TextAppearance.AppNameBig"
        parent="@style/TextAppearance.Display2">

        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primaryText</item>
    </style>

    <style
        name="TextAppearance.IntroQuestion"
        parent="@style/TextAppearance.Title">
        
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primaryText</item>
    </style>

    <style
        name="TextAppearance.AppInfoHeading"
        parent="@style/TextAppearance.Body2">

        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/disableHintText</item>
        <item name="android:fontFeatureSettings">smcp</item>
    </style>

    <style
        name="TextAppearance.AppInfoElementTitle"
        parent="@style/TextAppearance.Subhead">

        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textColor">@color/primaryText</item>
    </style>

    <style
        name="TextAppearance.AppInfoElementSubtitle"
        parent="@style/TextAppearance.Body1">

        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textColor">@color/secondaryText</item>
    </style>
</resources>