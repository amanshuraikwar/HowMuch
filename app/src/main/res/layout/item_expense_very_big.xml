<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parentLll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/marginNormal"
    android:orientation="vertical"
    android:background="@color/veryLightPink"
    app:layout_collapseMode="parallax">

    <TextView
        android:id="@+id/expenseHeadingTvv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginVeryLarge"
        android:layout_marginStart="@dimen/marginVeryLarge"
        android:textColor="@color/pink"
        android:textAppearance="@style/TextAppearance.ExpenseHeading"
        android:text="@string/spent_today" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginStart="@dimen/marginVeryLarge">

        <TextView
            android:id="@+id/currencyTvv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/lightPink"
            android:textAppearance="@style/TextAppearance.CurrencySymbolBig"
            tools:text="â‚¹" />

        <TextView
            android:id="@+id/amountTvv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textColor="@color/pink"
            android:textAppearance="@style/TextAppearance.ExpenseAmountBig"
            tools:text="256" />
    </LinearLayout>
</LinearLayout>
