<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:stateListAnimator="@animator/raise"
    android:background="@color/grey1"
    android:foreground="?android:selectableItemBackground"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/marginNormal"
        android:layout_marginEnd="@dimen/marginNormal"
        android:layout_marginTop="@dimen/marginNormal">

        <TextView
            android:id="@+id/dateTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.ExpenseDate"
            tools:text="today" />

        <TextView
            android:id="@+id/transactionsTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:textAppearance="@style/TextAppearance.TransactionNum"
            tools:text="3 transactions" />
    </FrameLayout>

    <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/expenseBarHeight"
        android:layout_marginStart="@dimen/marginNormal"
        android:layout_marginEnd="@dimen/marginNormal"
        android:layout_marginTop="@dimen/marginNormal"
        app:rcProgress="40"
        app:rcSecondaryProgress="60"
        app:rcMax="100"
        app:rcRadius="@dimen/expenseBarRadius"
        app:rcBackgroundPadding="0dp"
        app:rcProgressColor="@color/lightBlue"
        app:rcSecondaryProgressColor="@color/lightGreen" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginNormal"
        android:layout_marginEnd="@dimen/marginNormal"
        android:orientation="horizontal"
        android:gravity="end|bottom">

        <TextView
            android:id="@+id/spentAmountTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.ExpenseAmount"
            android:textColor="@color/lightBlue"
            tools:text="₹ 256"/>

        <TextView
            android:id="@+id/spentText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/marginVerySmall"
            android:textAppearance="@style/TextAppearance.ExpenseTextSmall"
            android:textColor="@color/lightBlue"
            android:text="@string/spent"/>

        <TextView
            android:id="@+id/otherAmountTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/marginNormal"
            android:textAppearance="@style/TextAppearance.ExpenseAmount"
            android:textColor="@color/lightGreen"
            tools:text="₹ 256"/>

        <TextView
            android:id="@+id/otherTextTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/marginVerySmall"
            android:textAppearance="@style/TextAppearance.ExpenseTextSmall"
            android:textColor="@color/lightGreen"
            android:text="@string/left"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/marginNormal"
        android:background="@color/divider" />
</LinearLayout>
