<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parentLl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginStart="@dimen/marginNormal"
    android:layout_marginEnd="@dimen/marginNormal"
    android:layout_marginBottom="1dp"
    android:stateListAnimator="@animator/raise"
    android:foreground="?android:selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:elevation="1dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/marginNormal"
        android:layout_marginEnd="@dimen/marginNormal"
        android:layout_marginTop="@dimen/marginNormal">

        <TextView
            android:id="@+id/dateTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.ExpenseDate"
            tools:text="today" />

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="@color/grey3"
            app:cardElevation="0dp">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/transactionsTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginStart="@dimen/marginSmall"
                    android:layout_marginEnd="28dp"
                    android:textAppearance="@style/TextAppearance.TransactionNum"
                    tools:text="3" />

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginEnd="@dimen/marginSmall"
                    android:layout_gravity="end|center_vertical"
                    android:tint="@color/inactiveIcon"
                    android:src="@drawable/ic_swap_horiz_black_24dp"
                    tools:ignore="ContentDescription" />
            </FrameLayout>
        </android.support.v7.widget.CardView>
    </FrameLayout>

    <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/expenseBarHeightSmall"
        android:layout_marginStart="@dimen/marginNormal"
        android:layout_marginEnd="@dimen/marginNormal"
        android:layout_marginTop="@dimen/marginNormal"
        app:rcProgress="40"
        app:rcSecondaryProgress="0"
        app:rcMax="100"
        app:rcRadius="@dimen/expenseBarRadiusSmall"
        app:rcBackgroundPadding="0dp"
        app:rcProgressColor="@color/blue"
        app:rcSecondaryProgressColor="@color/green"
        app:rcBackgroundColor="@color/grey3" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginNormal"
        android:layout_marginEnd="@dimen/marginNormal"
        android:layout_marginBottom="@dimen/marginNormal"
        android:orientation="horizontal"
        android:gravity="end|bottom">

        <TextView
            android:id="@+id/spentAmountCurrencyTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rupee"
            android:textAppearance="@style/TextAppearance.CurrencySymbol"
            android:textColor="@color/lightBlue"/>

        <TextView
            android:id="@+id/spentAmountTvv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/marginVerySmall"
            android:textAppearance="@style/TextAppearance.ExpenseAmountSmall"
            android:textColor="@color/blue"
            tools:text="256"/>

        <TextView
            android:id="@+id/spentTextTvv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/marginVerySmall"
            android:textAppearance="@style/TextAppearance.ExpenseTextSmall"
            android:textColor="@color/blue"
            android:text="@string/spent"/>

        <TextView
            android:id="@+id/otherAmountCurrencyTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/marginNormal"
            android:text="@string/rupee"
            android:textAppearance="@style/TextAppearance.CurrencySymbol"
            android:textColor="@color/lightGreen"/>

        <TextView
            android:id="@+id/otherAmountTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/marginVerySmall"
            android:textAppearance="@style/TextAppearance.ExpenseAmountSmall"
            android:textColor="@color/green"
            tools:text="256"/>

        <TextView
            android:id="@+id/otherTextTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/marginVerySmall"
            android:textAppearance="@style/TextAppearance.ExpenseTextSmall"
            android:textColor="@color/green"
            android:text="@string/left"/>
    </LinearLayout>
</LinearLayout>
