<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_marginStart="@dimen/marginNormal"
    android:layout_marginEnd="@dimen/marginNormal"
    android:layout_marginBottom="1dp"
    android:elevation="1dp">

    <TextView
        android:id="@+id/timeTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginNormal"
        android:layout_marginStart="@dimen/marginNormal"
        android:layout_marginEnd="@dimen/marginNormal"
        android:textAppearance="@style/TextAppearance.ExpenseTime"
        tools:text="today" />

    <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/expenseBarHeightSmall"
        android:layout_marginStart="@dimen/marginNormal"
        android:layout_marginEnd="@dimen/marginNormal"
        android:layout_marginTop="@dimen/marginNormal"
        app:rcProgress="40"
        app:rcMax="100"
        app:rcRadius="@dimen/expenseBarRadiusSmall"
        app:rcBackgroundPadding="0dp"
        app:rcProgressColor="@color/blue"
        app:rcBackgroundColor="@color/grey3" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/marginNormal"
        android:layout_marginEnd="@dimen/marginNormal"
        android:layout_marginTop="@dimen/marginNormal"
        android:layout_marginBottom="@dimen/marginNormal"
        android:layout_gravity="end"
        android:gravity="bottom">

        <TextView
            android:id="@+id/spentCurrencyTvv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.CurrencySymbol"
            android:textColor="@color/lightBlue"
            tools:text="â‚¹"/>

        <TextView
            android:id="@+id/spentAmountTvv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/marginVerySmall"
            android:textAppearance="@style/TextAppearance.ExpenseAmountSmall"
            android:textColor="@color/blue"
            tools:text="256"/>

        <TextView
            android:id="@+id/spentTextTvv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/marginVerySmall"
            android:textAppearance="@style/TextAppearance.ExpenseTextSmall"
            android:textColor="@color/blue"
            android:text="@string/spent"/>
    </LinearLayout>
</LinearLayout>
