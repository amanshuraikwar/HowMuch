<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/containerRl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title=""
        style="@style/Widget.HowMuch.Toolbar.SmallCapsTitle"
        android:stateListAnimator="@animator/toolbar_elevation">

        <TextView
            android:id="@+id/toolbarTitleTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_normal"
            android:gravity="center_horizontal"
            android:textAppearance="@style/TextAppearance.ToolbarTitle.SmallCaps"
            android:text="@string/title_settings"/>
    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:id="@+id/sv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/profileCv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/margin_large"
                app:cardElevation="0dp"
                app:cardCornerRadius="36dp"
                android:stateListAnimator="@animator/avatar_anim">

                <ImageView
                    android:id="@+id/profilePicIv"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:contentDescription="@string/profile_pic"/>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/nameTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/margin_normal"
                android:textAppearance="@style/TextAppearance.NameLarge"
                tools:text="Amanshu Raikwar"/>

            <TextView
                android:id="@+id/emailTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/margin_small"
                android:textAppearance="@style/TextAppearance.EmailLarge"
                tools:text="amanshuraikwar.in@gmail.com" />

            <FrameLayout
                android:id="@+id/currencyFl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_large"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:background="@color/white"
                android:stateListAnimator="@animator/setting_elevation">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/avatar_size_margin"
                    android:layout_marginEnd="@dimen/margin_large"
                    android:textAppearance="@style/TextAppearance.Setting"
                    android:text="@string/currency" />

                <TextView
                    android:id="@+id/currencySymbolTv"
                    android:layout_width="@dimen/avatar_size"
                    android:layout_height="@dimen/avatar_size"
                    android:gravity="center"
                    android:layout_gravity="start"
                    android:textAppearance="@style/TextAppearance.CurrencyLarge"
                    tools:text="â‚¹" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/aboutFl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:background="@color/white"
                android:stateListAnimator="@animator/setting_elevation"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="@dimen/margin_large"
                    android:layout_marginStart="@dimen/avatar_size_margin"
                    android:textAppearance="@style/TextAppearance.Setting"
                    android:text="@string/about" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="24dp"
                    android:gravity="center"
                    android:layout_gravity="start"
                    android:src="@drawable/ic_info_white_24dp"
                    android:tint="@color/activeIcon"
                    android:contentDescription="@string/about" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/logoutFl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_large"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:background="@color/white"
                android:stateListAnimator="@animator/setting_elevation">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="@dimen/margin_large"
                    android:layout_marginStart="@dimen/avatar_size_margin"
                    android:textAppearance="@style/TextAppearance.Setting"
                    android:text="@string/log_out" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="24dp"
                    android:gravity="center"
                    android:layout_gravity="start"
                    android:src="@drawable/ic_exit_to_app_white_24dp"
                    android:tint="@color/activeIcon"
                    android:contentDescription="@string/log_out" />
            </FrameLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>

