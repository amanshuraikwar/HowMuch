<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:elevation="1dp">

    <TextView
        android:id="@+id/dateTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="01/08/2018"
        android:visibility="gone"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/amountTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="72dp"
            android:layout_marginEnd="@dimen/margin_normal"
            android:layout_marginTop="@dimen/margin_normal"
            android:layout_marginBottom="@dimen/margin_normal"
            android:textAppearance="@style/TextAppearance.AmountSmall"
            tools:text="544.50" />

        <ImageView
            android:id="@+id/expenseIconIv"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="24dp"
            android:layout_gravity="center_vertical"
            android:tint="@color/inactiveIcon"
            android:src="@drawable/twotone_compare_arrows_24"
            android:contentDescription="@string/amount"/>

        <FrameLayout
            android:id="@+id/timeFl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/margin_normal">

            <TextView
                android:id="@+id/timeTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="4dp"
                android:paddingEnd="40dp"
                android:textColor="@color/secondaryText"
                android:textAppearance="@style/TextAppearance.TimeSmall"
                android:background="@color/gray2"
                tools:text="12:34"/>

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginEnd="16dp"
                android:layout_gravity="center_vertical|end"
                android:src="@drawable/ic_access_time_white_24dp"
                android:tint="@color/activeIcon"
                android:contentDescription="@string/category" />
        </FrameLayout>
    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/categoryFl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true">

            <TextView
                android:id="@+id/categoryTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="4dp"
                android:paddingEnd="40dp"
                android:textColor="@color/secondaryText"
                android:textAppearance="@style/TextAppearance.CategorySmall"
                android:background="@color/gray2"
                tools:text="House"/>

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginEnd="16dp"
                android:layout_gravity="center_vertical|end"
                android:src="@drawable/baseline_category_24"
                android:tint="@color/activeIcon"
                android:contentDescription="@string/category" />

        </FrameLayout>

        <TextView
            android:id="@+id/descriptionTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="72dp"
            android:layout_marginEnd="@dimen/margin_normal"
            android:layout_toStartOf="@+id/categoryFl"
            android:layout_alignParentStart="true"
            android:textAppearance="@style/TextAppearance.DescriptionSmall"
            tools:text="pg rent" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/margin_normal"
        android:background="@color/divider" />

</LinearLayout>
