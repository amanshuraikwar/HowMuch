<?xml version="1.0" encoding="utf-8"?>
<io.github.amanshuraikwar.howmuch.ui.widget.SwipeBackCoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey1"
    tools:context="io.github.amanshuraikwar.howmuch.ui.expenseday.ExpenseDayActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey2"
        android:elevation="2dp">

        <ImageButton
            android:id="@+id/backIb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/marginSmall"
            android:padding="@dimen/marginSmall"
            android:src="@drawable/ic_arrow_back_black_24dp"
            android:background="?android:selectableItemBackgroundBorderless"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/expenseDateTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="62dp"
            android:layout_gravity="center_vertical"
            android:textAppearance="@style/TextAppearance.ToolbarTitle"
            android:text="@string/today" />
    </FrameLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/transactionsRv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="56dp"
        android:paddingTop="@dimen/marginNormal"
        android:paddingBottom="@dimen/fab_padding_bottom"
        android:clipToPadding="false"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:listitem="@layout/item_transaction"/>
</io.github.amanshuraikwar.howmuch.ui.widget.SwipeBackCoordinatorLayout>
