<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/grey1">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey2"
        android:elevation="@dimen/elevation_action_bar">

        <ImageButton
            android:id="@+id/backIb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/marginSmall"
            android:padding="@dimen/marginSmall"
            android:src="@drawable/ic_arrow_back_black_24dp"
            android:background="?android:selectableItemBackgroundBorderless"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/expenseDateTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="62dp"
            android:layout_gravity="center_vertical"
            android:textAppearance="@style/TextAppearance.ToolbarTitle"
            android:text="@string/add_transaction" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/marginNormal"
            android:layout_marginStart="@dimen/marginVeryLarge"
            android:layout_marginEnd="@dimen/marginVeryLarge"
            android:textAppearance="@style/TextAppearance.ExpenseHeading"
            android:text="@string/amount" />

        <EditText
            android:id="@+id/amountTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/marginVeryLarge"
            android:layout_marginEnd="@dimen/marginVeryLarge"
            android:layout_marginBottom="@dimen/marginNormal"
            android:ellipsize="end"
            android:hint="@string/amount"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:maxLines="1"
            android:scrollHorizontally="true"
            android:textAppearance="@style/TextAppearance.ExpenseAmount" />
    </LinearLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/addBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginNormal"
        android:layout_marginStart="@dimen/marginLarge"
        android:layout_marginEnd="@dimen/marginLarge"
        android:layout_gravity="center_horizontal"
        android:stateListAnimator="@animator/raise"
        android:foreground="?android:selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        app:cardBackgroundColor="@color/pink"
        app:cardElevation="0dp"
        app:cardCornerRadius="@dimen/cardCornerRadiusNormal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/marginSmall"
            android:gravity="center_horizontal"
            android:textAppearance="@style/TextAppearance.Btn"
            android:text="@string/add" />
    </android.support.v7.widget.CardView>
</LinearLayout>
